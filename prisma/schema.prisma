generator client {
  provider = "prisma-client"
  output   = "../src/prisma/generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum SeatType {
  VIP
  GENERAL
  PLATEA
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  // YAPE
  // MERCADO_PAGO
}

enum PaymentStatus {
  PENDING
  REQUIRES_ACTION
  PROCESSING
  SUCCEEDED
  FAILED
  CANCELLED
  REFUNDED
  PARTIALLY_REFUNDED
}

model User {
  id        String @id @default(uuid())
  email     String? @unique
  password  String?
  roles     String[] @default(["user"])
  isActive  Boolean @default(true)
  orders    Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Concert {
  id          String @id @default(uuid())
  name        String
  venue       String
  eventDate   DateTime
  totalSeats  Int

  seats       Seat[]
  orders      Order[]

  createdAt   DateTime @default(now())
}

model Seat {
  id          String @id @default(uuid())
  concertId   String
  section     String
  row         String
  number      Int
  type        SeatType
  price       Float

  concert     Concert @relation(fields: [concertId], references: [id])
  orderItem   OrderItem?

  @@unique([concertId, section, row, number])
}

model Order {
  id        String @id @default(uuid())
  userId    String
  concertId String
  status    OrderStatus
  total     Decimal

  user User @relation(fields: [userId], references: [id])
  concert Concert @relation(fields: [concertId], references: [id])
  orderItem     OrderItem[]
  payment   Payment?

  createdAt DateTime @default(now())
  paidAt    DateTime?
  
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  seatId    String @unique
  price     Decimal

  order Order @relation(fields: [orderId], references: [id])
  seat Seat @relation(fields: [seatId], references: [id])
}

model Payment {
  id              String          @id @default(uuid())
  orderId         String          @unique
  provider        PaymentProvider
  externalId      String          @unique
  status          PaymentStatus   @default(PENDING)
  amount          Decimal
  currency        String          @default("USD")
  paymentMethod   String?         // "card", "paypal", "paypal_credit", etc.
  last4           String?         // últimos 4 dígitos (card) o email PayPal si aplica
  receiptUrl      String?
  metadata        Json?           // datos extras (Stripe metadata, PayPal custom fields)
  failureReason   String?         // "card_declined", "insufficient_funds", etc.
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  order           Order           @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([externalId])
  @@index([status])
}